<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ELLAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLightDarkPurple</item>
        <item name="colorPrimaryDark">@color/colorDarkPurple</item>
        <item name="colorAccent">@color/colorLighterPurpleFontColor</item>
    </style>



    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- window with fullscreen -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- window with no titlebar-->
    </style>

    <style name="TitleLogo" parent="FullScreenTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="BoxHeaderTitleTxt">
        <item name="android:gravity">left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="BoxFlyerContainer" parent="FullScreenTheme">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="BoxFlyerContainerFooter" parent="FullScreenTheme">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BoxFlyerContainerFooterTxt" parent="FullScreenTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="BoxFlyerContainerTxt">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/colorLighterDarkPurple</item>
    </style>


    <style name="BoxContextTxt">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ELLAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ELLAppTheme.NoActionBarWithTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ELLAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ELLAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BigSubmitBtn">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">30dp</item>
    </style>


    <style name="QuestionTitleTxt">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="QuestionAnswerTxt">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorLighterDarkPurple</item>
    </style>

</resources>
